import sounddevice as sd
from scipy.io.wavfile import write
import wavio as wv
frequency = 44100 
duration = 13
record = sd.rec(int(duration * freq), samplerate=frequency, channels=2)
sd.wait()
write("rec0.wav", frequency, record)
wv.write("rec1.wav", record, frequency, samplewidth=4)
information = wv.write("record1.wav", record, frequency, samplewidth=4)
print(information)
